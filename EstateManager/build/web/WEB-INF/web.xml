<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AddEmployee</servlet-name>
        <servlet-class>manager.AddEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Renovation</servlet-name>
        <servlet-class>manager.Renovation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToggleAssigned</servlet-name>
        <servlet-class>manager.ToggleAssigned</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>report</servlet-name>
        <servlet-class>manager.report</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayServlet</servlet-name>
        <servlet-class>manager.DisplayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddEmployee</servlet-name>
        <url-pattern>/AddEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Renovation</servlet-name>
        <url-pattern>/Renovation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ToggleAssigned</servlet-name>
        <url-pattern>/ToggleAssigned</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>report</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayServlet</servlet-name>
        <url-pattern>/DisplayServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
